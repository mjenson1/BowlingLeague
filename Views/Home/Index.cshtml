@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<h2>@ViewBag.NameTeam</h2> <!--displays the team name in the heading-->

<table class="table-bordered">
    <thead><tr>
    <th scope="col">First Name:</th>
    <th scope="col">Middle Init:</th>
    <th scope="col">Last Name:</th>
    <th scope="col">Address:</th>
    <th scope="col">City:</th>
    <th scope="col">State:</th>
    <th scope="col">Zip:</th>
    <th scope="col">Phone Number:</th>
</tr>
    </thead>
    <tbody class="table-striped">
        @foreach (var x in Model.Bowlers)
        {
        <tr>
            <td>@x.BowlerFirstName</td>
            <td>@x.BowlerMiddleInit</td>
            <td>@x.BowlerLastName</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>
        </tr>
        }
    </tbody>
 </table>
<div page-info="@Model.PageNumberingInfo"
     page-url-TeamName="@Model.TeamTitle"> <!--uses the taghelpers to pass info to the home controller-->

</div>